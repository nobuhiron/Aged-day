---
import LinkButton from './LinkButton.astro';
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
const linkBase = import.meta.env.PUBLIC_LINK_BASE;
const { image, title, price, description, titleSub, href, class:customClass } = Astro.props;
---

<li class={`c-item-card ${customClass}`}>
  <div class='c-item-card__content'>
    <div class='c-item-card__image'>
      <img src={`${imgBase}${image}`} alt={title} />
    </div>
    <div class='c-item-card__price'>
      &yen;
      <span class='c-item-card__price-amount'>{price}</span>
      (税込)
    </div>
    <div class='c-item-card__text'>
      <h4 class='c-item-card__title'>
        <span class='c-item-card__title-ja'>{title}</span>
        <span class='c-item-card__title-sub'>{titleSub}</span>
      </h4>
      <div class='c-item-card__description'>
        <p>{description}</p>
      </div>
    </div>
    <LinkButton href={`${linkBase}${href}`} class='c-item-card__link' />
  </div>
</li>
