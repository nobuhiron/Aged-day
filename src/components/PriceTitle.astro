---
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
const { color, priceLow, priceHigh } = Astro.props;
---

<h3 class='c-price-title p-price__title'>
  <span class='c-price-title__en'>
    <img src={`${imgBase}/svg/price-deco-${color}.svg`} alt="" />
  </span>
 {priceHigh
  ? (
      <>
        {priceLow}<span>円</span>～{priceHigh}<span>円</span>
      </>
    )
  : (
      <>
        {priceLow}<span>円以上</span>
      </>
    )
}
<br />
  おすすめアイテム
  <div class='c-price-title__dots'>
    <span class='c-price-title__dot'></span>
    <span class='c-price-title__dot'></span>
    <span class='c-price-title__dot'></span>
  </div>
</h3>
