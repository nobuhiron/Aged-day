---
import LinkButton from './LinkButton.astro';
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
const linkBase = import.meta.env.PUBLIC_LINK_BASE;
const { image, title, price, description, titleSub, href } = Astro.props;
---

<li class='c-price-card'>
  <div class='c-price-card__content'>
    <div class='c-price-card__image'>
      <img src={`${imgBase}${image}`} alt={title} />
    </div>
    <div class='c-price-card__text'>
      <h4 class='c-price-card__title'>
        <span class='c-price-card__title-main'>{title}</span>
        <span class='c-price-card__title-sub'>{titleSub}</span>
      </h4>
      <div class='c-price-card__price'>
        ¥<span class='c-price-card__price-amount'>{price}</span>(税込)
      </div>
      <div class='c-price-card__description'>
        <p>{description}</p>
      </div>
    </div>
    <LinkButton href={`${linkBase}${href}`} class='c-price-card__link' />
  </div>
</li>
