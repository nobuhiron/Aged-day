---
import SectionTitle from '../components/SectionTitle.astro';
import ItemCard from '../components/ItemCard.astro';
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
---

<section id='featured-items' class='p-featured-items'>
  <header class='p-featured-items__header'>
    <div class='p-featured-items__header-image c-section-header__image'>
      <SectionTitle
        title='"美味しい"を贈る</br>おすすめアイテム'
        en='Give the gift of "delicious"'
      />
    </div>
  </header>
  <div class='l-container'>
    <ul class='p-featured-items__cards c-item-card__wrapper'>
      <ItemCard imgBase={imgBase} />
      <ItemCard imgBase={imgBase} />
      <ItemCard imgBase={imgBase} />
      <ItemCard imgBase={imgBase} />
    </ul>
  </div>
</section>
