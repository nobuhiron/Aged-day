---
import SectionTitle from '../components/SectionTitle.astro';
import ItemCard from '../components/ItemCard.astro';
import { productsFeatured } from '../data/itemCardData.js';
const imgBase = import.meta.env.PUBLIC_IMAGE_BASE;
---

<section id='featured-items' class='p-featured-items'>
  <header class='p-featured-items__header'>
    <div class='p-featured-items__header-image c-section-header__image'>
      <SectionTitle title='ピックアップアイテム' en='Featured Items' />
    </div>
  </header>
  <div class='l-container'>
    <div class='c-item-card__category'>
      <div class='l-inner'>
        <ul class='c-item-card__items'>
          {productsFeatured.map((p) => (
            <ItemCard image={p.image} title={p.title} titleSub={p.titleSub} price={p.price} description={p.description} href={p.href} />
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
